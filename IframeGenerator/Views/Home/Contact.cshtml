@model IframeGenerator.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html>
<head>
    <title>Contact</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var addr = '@Model.Address'; // Modelden adresi alıyoruz
            function loadMap() {
                var embed = "<iframe width='100%' height='600px' frameborder='0' " +
                    "scrolling='no' marginheight='0' marginwidth='0' " +
                    "src='https://maps.google.com/maps?&q=" +
                    encodeURIComponent(addr) +
                    "&output=embed'></iframe>";
                $('.place').html(embed);
            }
            loadMap();
        });
    </script>
</head>
<body>
    <!-- Form Ekleme -->
    <form asp-action="Contact" method="post">
        <div>
            <label for="Address">Enter Address:</label>
            <input type="text" id="Address" name="Address" value="@Model.Address" />
        </div>
        <button type="submit">Show on Map</button>
    </form>
    <div class="place"></div>
</body>
</html>
